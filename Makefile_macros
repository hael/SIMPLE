# Makefile_macros

####### The project path #####

Simple_source=/Users/hael/src/fortran/simple3.0

####### The switches #####

DOPENMP = -fopenmp -DOPENMP 
DCUDA = 
DBENCH = 

####### The compilers paths #####

CCCOMP=
GCC=
GFORTRAN=gfortran

####### The CUDA paths #####

CUDADIR=

####### Modules and objects directories. #####

OBJDIR=obj/SIMPLEOFILES
MODDIR=obj/SIMPLEOFILES

##############
# C compiler.#
##############

CC=$(CCCOMP)
CFLAGS= -g -DMACOSX -fopenmp -DOPENMP   
CCLIB=$(CC) -c $(CFLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils        \
                         -I /sw/include/

################
# C++ compiler.#
################

CPP=$(GCC)
CPPFLAGS=-DADD_ -g -DMACOSX -fopenmp -DOPENMP   
CPPCLIB=$(CPP) -c $(CPPFLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils        \
                              -I $(Simple_source)/test_code                           \
                              -I /sw/include/

#######################
# Fortran 90 compiler.#
#######################

# $(DLIB)
F90C=$(GFORTRAN)
F90FLAGS=-fimplicit-none -fall-intrinsics -ffree-form -cpp -fpic -fno-second-underscore -D_DEBUG -g -Og -Wall -fbounds-check -fbacktrace -DMACOSX -fopenmp -DOPENMP   
F90CLIB=$(F90C) -c $(F90FLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils  \
                             -J $(MODDIR)                      \


F90CLIB77=$(F90C) -c $(F90FLAGS77) -I .   -I$(Simple_source)/simple_utils  \
                                   -I $(MODDIR)                        \
                                   -J $(MODDIR)                        \

F90POST=

