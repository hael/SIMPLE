# Makefile_macros

####### The project path #####

Simple_source=/users/strubi/juha/apps/simple_beta

####### The switches #####

DOPENMP = -fopenmp
DCUDA = 
DBENCH = 

####### The compilers paths #####

CCCOMP=
GCC=
GFORTRAN=gfortran

####### The CUDA paths #####

CUDADIR=

####### Modules and objects directories. #####

OBJDIR=obj/SIMPLEOFILES
MODDIR=obj/SIMPLEOFILES

##############
# C compiler.#
##############

CC=$(CCCOMP)
CFLAGS= -O3 -O -DLINUX -fopenmp  
CCLIB=$(CC) -c $(CFLAGS) -I $(MODDIR)                                            \
                         -I /apps/well/fftw/3.3.4-gcc5.4.0/include/

################
# C++ compiler.#
################

CPP=$(GCC)
CPPFLAGS=-DADD_ -O3 -DLINUX -fopenmp  
CPPCLIB=$(CPP) -c $(CPPFLAGS) -I $(MODDIR)                                            \
                              -I $(Simple_source)/test_code                           \
                              -I /apps/well/fftw/3.3.4-gcc5.4.0/include/

#######################
# Fortran 90 compiler.#
#######################

# $(DLIB)
F90C=$(GFORTRAN)
F90FLAGS=-ffree-form -cpp -fPIC -fno-second-underscore -O3 -DLINUX -fopenmp  
F90CLIB=$(F90C) -c $(F90FLAGS) -I $(MODDIR)                      \
                             -J $(MODDIR)                      \


F90CLIB77=$(F90C) -c $(F90FLAGS77) -I .                                \
                                   -I $(MODDIR)                        \
                                   -J $(MODDIR)                        \

F90POST=

