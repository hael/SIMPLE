div
	h="View Particles"
	img#closebutton(
		src="img/close.png"
		onclick="viewer.hide()"
	)
div#ptcls
	div.selector
		select#stks
			each stk in stks
				option(
					value=stk[0]
					onclick="simple.viewParticles('" + stk[0] + "','" + stk[2] +"')"
				)=stk[1]
	div.thumbnails

	div.viewertoolbar
		div
			label(for='contrast') Contrast:
			input#contrast(
				type="range"
				min="0"
				max="200"
				step="1"
				value="100"
				oninput="viewer.modifyImages('ptcls')"
			)
		div
			label(for='brightness') Brightness:
			input#brightness(
				type="range"
				min="0"
				max="200"
				step="1"
				value="100"
				oninput="viewer.modifyImages('ptcls')"
			)
		div
			label(for='zoom') Zoom:
			input#zoom(
				type="range"
				min="0.2"
				max="2"
				step="0.1"
				value="1"
				oninput="viewer.modifyImages('ptcls')"
			)
		div
			label(for='scale') Scale:
			input#scale(
				type="range"
				min="50"
				max="400"
				step="10"
				value="200"
				oninput="viewer.scaleImages('ptcls')"
			)
