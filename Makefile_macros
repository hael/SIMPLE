# Makefile_macros

####### The project path #####

Simple_source=/Users/creboul/Simple3

####### The switches #####

DOPENMP = -fopenmp -DOPENMP 
DCUDA = 
DBENCH = 

####### The compilers paths #####

CCCOMP=
GCC=
GFORTRAN=gfortran

####### The CUDA paths #####

CUDADIR=

####### Modules and objects directories. #####

OBJDIR=obj/SIMPLEOFILES
MODDIR=obj/SIMPLEOFILES

##############
# C compiler.#
##############

CC=$(CCCOMP)
CFLAGS= -O3 -O -DMACOSX -fopenmp -DOPENMP   
CCLIB=$(CC) -c $(CFLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils        \
                         -I /opt/local/include/

##############
# Preprocessor .#
##############

FPP=cpp 
FPPFLAGS= -P $(DOPENMP) -J $(MODDIR) -I $(OBJDIR) -I $(MODDIR) -I$(Simple_source)/simple_utils  \
                         -I /opt/local/include/

################
# C++ compiler.#
################

CPP=$(GCC)
CPPFLAGS=-DADD_ -O3 -DMACOSX -fopenmp -DOPENMP   
CPPCLIB=$(CPP) -c $(CPPFLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils        \
                              -I $(Simple_source)/test_code                           \
                              -I /opt/local/include/

#######################
# Fortran 90 compiler.#
#######################

# $(DLIB)
F90C=$(GFORTRAN)
F90FLAGS=-fimplicit-none -fall-intrinsics -ffree-form -cpp -fpic -fno-second-underscore -ffree-line-length-none -O3 -DMACOSX -fopenmp -DOPENMP    $(FFLAGS)
F90CLIB=$(F90C) -c $(F90FLAGS) -I $(MODDIR)  -I$(Simple_source)/simple_utils  \
                             -J $(MODDIR)                      \


F90CLIB77=$(F90C) -c $(F90FLAGS77) -I .   -I$(Simple_source)/simple_utils  \
                                   -I $(MODDIR)                        \
                                   -J $(MODDIR)                        \

F90POST=

