# Makefile_macros

####### The project path #####

Simple_source=/home/hael/src/simple

####### The switches #####

DOPENMP = -qopenmp
DCUDA = 
DBENCH = 

####### The compilers paths #####

CCCOMP=
GCC=
GFORTRAN=ifort

####### The CUDA paths #####

CUDADIR=

####### Modules and objects directories. #####

OBJDIR=obj/SIMPLEOFILES
MODDIR=obj/SIMPLEOFILES

##############
# C compiler.#
##############

CC=$(CCCOMP)
CFLAGS= -O3 -no-prec-div -static -fp-model fast=2 -xHost -O -DLINUX -qopenmp  
CCLIB=$(CC) -c $(CFLAGS) -I $(MODDIR)                                            \
                         -I /usr/include/

################
# C++ compiler.#
################

CPP=$(GCC)
CPPFLAGS=-DADD_ -O3 -no-prec-div -static -fp-model fast=2 -xHost -DLINUX -qopenmp  
CPPCLIB=$(CPP) -c $(CPPFLAGS) -I $(MODDIR)                                            \
                              -I $(Simple_source)/test_code                           \
                              -I /usr/include/

#######################
# Fortran 90 compiler.#
#######################

# $(DLIB)
F90C=$(GFORTRAN)
F90FLAGS=-implicitnone -80 -cpp -fPIC -module obj/SIMPLEOFILES/ -O3 -no-prec-div -static -fp-model fast=2 -xHost -DLINUX -qopenmp  
F90CLIB=$(F90C) -c $(F90FLAGS) -I $(MODDIR)                      \


F90CLIB77=$(F90C) -c $(F90FLAGS77) -I .                                \
                                   -I $(MODDIR)                        \

F90POST=

