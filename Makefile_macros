# Makefile_macros

####### The project path #####

Simple_source=/home/hael/src/simple3.0clone

####### The switches #####

DOPENMP = -fopenmp
DCUDA = 
DBENCH = 

####### The compilers paths #####

CCCOMP=
GCC=
GFORTRAN=ifort

####### The CUDA paths #####

CUDADIR=

####### Modules and objects directories. #####

OBJDIR=obj/SIMPLEOFILES
MODDIR=obj/SIMPLEOFILES

##############
# C compiler.#
##############

CC=$(CCCOMP)
CFLAGS=-DCUBLAS_GFORTRAN -DADD_ -fast -O -DLINUX -fopenmp  
CCLIB=$(CC) -c $(CFLAGS) -I $(MODDIR)                                            \
                         -I /usr/include/

################
# C++ compiler.#
################

CPP=$(GCC)
CPPFLAGS=-DADD_ -fast -DLINUX -fopenmp  
CPPCLIB=$(CPP) -c $(CPPFLAGS) -I $(MODDIR)                                            \
                              -I $(Simple_source)/test_code                           \
                              -I /usr/include/

#######################
# Fortran 90 compiler.#
#######################

# $(DLIB)
F90C=$(GFORTRAN)
F90FLAGS=-implicitnone -132 -ffree-form -cpp -fPIC -nus -fast -DLINUX -fopenmp  
F90CLIB=$(F90C) -c $(F90FLAGS) -I .                                \
                               -I $(MODDIR)                        \
                               -J $(MODDIR)                        \


F90CLIB77=$(F90C) -c $(F90FLAGS77) -I .                                \
                                   -I $(MODDIR)                        \
                                   -J $(MODDIR)                        \

F90POST=

